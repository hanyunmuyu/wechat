.tab {
    width: 100%;
    display: flex;
    flex-direction: row;
}

.tab .tab-item {
    flex: 1;
    text-align: center;
}
.tab .tab-item .active{
    background: #1296db;
    width: 100%;
    height: 2px;
}
.text-active {
    color: #1296db;
}
.tab-detail{
    width: 100%;
    display: flex;
    flex-direction: column;
    margin-top: 8px;
    font-size: 16px;
}