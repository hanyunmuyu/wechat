.scroll-x {
    white-space: nowrap;
    display: flex;
}

.scroll-x .scroll-view-item {
    width: 120px;
    text-align: center;
    display: inline-block;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.scroll-x .scroll-view-item text {
    font-size: 16px;
}

.scroll-view-item image {
    height: 50px;
    width: 50px;
}

.scroll-view-item .active {
    width: 100%;
    height: 2px;
    background: #1296db;
}

.scroll-view-item .text-active {
    color: #1296db;
}

.list-item {
    width: 100%;
    display: flex;
    flex-direction: column;
    margin: 8px;
}

.list-item-content {
    display: flex;
    flex-direction: row;
}

.list-item .logo {
    width: 80px;
    position: relative;
}

.list-item .logo image {
    width: 100%;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
}

.list-item .detail {
    flex: 1;
    display: flex;
    flex-direction: column;
    margin: 6px 10px;
}

.list-item .detail .title {
    font-size: 16px;
}

.list-item .detail .description {
    font-size: 12px;
}

.list-item-footer {
    margin-top: 2px;
    display: flex;
    flex-direction: row;
}

.list-item-footer text {
    font-size: 12px;
    margin-left: 6px;
}