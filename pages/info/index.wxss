.pic{
    text-align: center;
    margin: 0 auto;
    height: 180px;
    overflow: hidden;
}
.nav{
    margin-top: 2px;
    width: 100%;
    display: flex;
    flex-direction: row;
}
.nav view{
    flex: 1;
}
.active{
    border-bottom: 2px solid #1296db;
    color: #1296db;
}
.tab{
    width: 100%;
    display: flex;
    flex-direction: column;
}

.info{
    display: flex;
    flex-direction: column;
    width: 100%;
    margin: 0 auto;
}
.info map{
    width: 100%;
    height: 300px;
}
.info .detail{
    padding: 6px;
}
.info .detail text{
    font-size: 16px;
}
.user-list{
    width: 100%;
    display: flex;
    flex-direction: column;
}
.user-list .tag{
    font-size: 18px;
}
.user-item{
    width: 100%;
    display: flex;
    flex-direction: column;
}
.user-detail{
    display: flex;
    flex-direction: row;
    margin: 6px;
}
.user-detail .user-avatar{
    overflow: hidden;
    height: 50px;
    width: 50px;
    border-radius: 25px;
}
.user-detail .user-avatar image{
    height: 50px;
    width: 50px;
}
.user-detail .user-info{
    flex: 1;
    line-height: 50px;
    text-align: left;
    padding-left: 18px;
    font-size: 16px;
}