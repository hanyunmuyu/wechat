/**index.wxss**/
.user {
    width: 100%;
    display: flex;
    flex-direction: column;
    margin-top: 38px;
}

.user-info {
    width: 100%;
    display: flex;
    flex-direction: row;
    padding: 0 10px;
}

.user-info image {
    width: 50px;
    height: 50px;
}

.user-nickname {
    line-height: 50px;
    height: 50px;
    flex: 1;
    margin-left: 8px;
}
.user-nickname image{
    width: 16px;
    height: 16px;
    margin-left: 8px;
}

.user-about {
    display: flex;
    flex-direction: row;
    width: 100%;
    margin-top: 28px;
}

.user-about-item {
    flex: 1;
    text-align: center;
    flex-direction: column;
    font-size: 16px;
}

.user-about-list {
    margin-top: 58px;
    width: 100%;
    display: flex;
    flex-direction: column;
    font-size: 16px;
}

.list-item {
    width: 100%;
    display: flex;
    flex-direction: row;
    margin-top: 16px;
}

.item-title {
    padding-left: 18px;
    flex: 1;
}

.list-item image {
    width: 30px;
    height: 30px;
}
